.s-address
  %header.s-header
    = render partial: 'layouts/header'
  %main.s-address_main
    %section.s-address_main_r
      %h2 発送元・お届け先住所
      = form_for @address do |f|
        .s-address_main_r_contents
          .field
            %div
              = f.label "お名前"
              %span.require 必須
              %br/
            = f.text_field :family_name, autofocus: true, autocomplete: "family_name",class: "input-default harf",placeholder: "例）山田"
            = f.text_field :first_name, autofocus: true, autocomplete: "first_name",class: "input-default harf",placeholder: "例）太郎"
          .field
            %div
              = f.label "お名前カナ"
              %span.require 必須
              %br/
            = f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana",class: "input-default harf",placeholder: "ヤマダ"
            = f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana",class: "input-default harf",placeholder: "タロウ"
          .field
            = f.label "郵便番号"
            %span.require 必須
            %br/
            = f.text_field :postal_code, autofocus: true, autocomplete: "postal_code",class: "input-default",placeholder: "ハイフン無し、半角の数字7文字入力"
          .field
            = f.label "都道府県"
            %span.require 必須
            %br/
            = f.collection_select :city, Prefecture.all, :id, :name, {}, {class: "select-box"}
          .field
            = f.label "市町村"
            %span.require 必須
            %br/
            = f.text_field :local, autofocus: true, autocomplete: "local",class: "input-default",placeholder: "例 横浜市緑区"
          .field
            = f.label "番地"
            %span.require 必須
            %br/
            = f.text_field :block, autofocus: true, autocomplete: "block",class: "input-default",placeholder: "例 青山1-1-1"
          .field
            = f.label "マンション名"
            %span.any 任意
            %br/
            = f.text_field :building, autofocus: true, autocomplete: "building",class: "input-default",placeholder: "例 柳ビル103"
          .field
            = f.label "連絡先"
            %span.any 任意
            %br/
            = f.text_field :phone_number, autofocus: true, autocomplete: "number",class: "input-default",placeholder: "ハイフン無し 数字のみ入力"
          .actions
            = f.submit "登録",class: "next-btn"